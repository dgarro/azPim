{
    "name": "azPim",
    "description": "Allows quick access to PIM for Azure Resources",
    "version": "1.5",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [        
        "https://management.azure.com/*"        
    ],
    "background": {
        "service_worker": "background.js"
    },
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "ico/icon16.png",
        "32": "ico/icon32.png",
        "48": "ico/icon48.png",
        "128": "ico/icon128.png"
    }
}