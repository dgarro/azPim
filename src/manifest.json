{
    "name": "azPim",
    "description": "Allows quick access to PIM for Azure Resources",
    "version": "3.1.1",
    "permissions": [
        "storage",
        "activeTab",
        "webRequest"
    ],
    "host_permissions": [        
        "https://portal.azure.com/api/Portal/GetEarlyUserData"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "ico/icon16.png",
        "32": "ico/icon32.png",
        "48": "ico/icon48.png",
        "128": "ico/icon128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      }
}